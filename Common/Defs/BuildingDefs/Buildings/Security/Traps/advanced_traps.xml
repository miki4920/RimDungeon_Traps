<Defs>
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>Spikes</defName>
		<label>spikes</label>
		<description>Hidden spikes in the ground. When triggered, they thrust into the enemy, doing massive damage. Rearmable but expensive and time-consuming to build. It is unlikely to spring on colonists or animals.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Spikes_Trap_Armed</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>0</Flammability>
			<TrapMeleeDamage>80</TrapMeleeDamage>
			<TrapSpringChance>0.75</TrapSpringChance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>150</costStuffCount>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>3</numberOfAttacks>
				<rearmable>true</rearmable>
				<armorPenetration>1</armorPenetration>
			</li>
		</modExtensions>
		<building>
			<trapDestroyOnSpring>false</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory>
			<trapUnarmedGraphicData>
				<texPath>Things/Building/Traps/Spikes_Trap_Unarmed</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</trapUnarmedGraphicData>
		</building>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<researchPrerequisites>
			<li>AdvancedTraps</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>