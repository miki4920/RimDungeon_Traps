<Defs>
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>Spikes</defName>
		<label>spikes</label>
		<description>Hidden spikes in the ground. When triggered, they thrust into the enemy, doing massive damage. Rearmable but expensive and time-consuming to build. It is unlikely to spring on colonists or animals.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Spikes_Trap_Armed</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>1</Flammability>
			<TrapMeleeDamage>50</TrapMeleeDamage>
			<TrapSpringChance>0.75</TrapSpringChance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>200</costStuffCount>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>1</numberOfAttacks>
				<rearmable>true</rearmable>
				<sameFactionSpringChance>0.05</sameFactionSpringChance>
				<wildAnimalSpringChance>0.05</wildAnimalSpringChance>
				<armorPenetration>1</armorPenetration>
			</li>
		</modExtensions>
		<building>
			<trapDestroyOnSpring>false</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory>
			<trapUnarmedGraphicData>
				<texPath>Things/Building/Traps/Spikes_Trap_Unarmed</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</trapUnarmedGraphicData>
		</building>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_NeverAdjacentTrap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>AdvancedTraps</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>PoisonTrap</defName>
		<label>poison trap</label>
		<description>WARNING: This single-use poison trap works on touch and is guaranteed to kill any creature affected creature within a short period.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Poison_Trap</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>1</Flammability>
			<TrapMeleeDamage>1</TrapMeleeDamage>
			<TrapSpringChance>1</TrapSpringChance>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<MedicineHerbal>10</MedicineHerbal>
		</costList>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>1</numberOfAttacks>
				<sameFactionSpringChance>1</sameFactionSpringChance>
				<wildAnimalSpringChance>1</wildAnimalSpringChance>
				<armorPenetration>1</armorPenetration>
				<hediff>LethalPoison</hediff>
			</li>
		</modExtensions>
		<building>
			<trapDestroyOnSpring>true</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory>
		</building>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_NeverAdjacentTrap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>AdvancedTraps</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>