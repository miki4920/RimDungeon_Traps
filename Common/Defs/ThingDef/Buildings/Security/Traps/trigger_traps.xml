<Defs>
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>BearTrap</defName>
		<label>bear trap</label>
		<description>Whilst usually used against bears, this trap can be effectively used against a variety of animals, or even humans. It does a decent amount of piercing damage, and gives a constant movement penalty but requires metal to make.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Bear_Trap_Armed</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>16000</WorkToBuild>
			<Flammability>0</Flammability>
			<TrapMeleeDamage>25</TrapMeleeDamage>
			<TrapSpringChance>0.25</TrapSpringChance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>1</numberOfAttacks>
				<rearmable>true</rearmable>
				<pathWalkCost>10</pathWalkCost>
				<sameFactionSpringChance>0.25</sameFactionSpringChance>
				<wildAnimalSpringChance>0.75</wildAnimalSpringChance>
				<armorPenetration>0.3</armorPenetration>
				<hediffToAdd>CrushedLegs</hediffToAdd>
			</li>
		</modExtensions>
		<building>
			<trapDestroyOnSpring>false</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory>
			<trapUnarmedGraphicData>
				<texPath>Things/Building/Traps/Bear_Trap_Unarmed</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</trapUnarmedGraphicData>
		</building>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_NeverAdjacentTrap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>TriggerTraps</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>Spikes</defName>
		<label>spikes</label>
		<description>Spikes hidden in the ground. When triggered, spikes thrust into the enemy, doing massive damage. Rearmable but is expensive and takes a long time to build. It triggers on non-colonist humans only.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Spikes_Trap_Armed</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>1</Flammability>
			<TrapMeleeDamage>50</TrapMeleeDamage>
			<TrapSpringChance>0.75</TrapSpringChance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>200</costStuffCount>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>1</numberOfAttacks>
				<rearmable>true</rearmable>
				<pathWalkCost>10</pathWalkCost>
				<sameFactionSpringChance>0</sameFactionSpringChance>
				<wildAnimalSpringChance>0</wildAnimalSpringChance>
				<armorPenetration>1</armorPenetration>
			</li>
		</modExtensions>
		<building>
			<trapDestroyOnSpring>false</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory>
			<trapUnarmedGraphicData>
				<texPath>Things/Building/Traps/Spikes_Trap_Unarmed</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</trapUnarmedGraphicData>
		</building>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_NeverAdjacentTrap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>TriggerTraps</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>