<Defs>
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>Noose</defName>
		<label>noose</label>
		<description>A noose trap. Does very little damage, but can immobilise target for a long time.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Noose_Trap_Armed</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>4000</WorkToBuild>
			<Flammability>1</Flammability>
			<TrapMeleeDamage>20</TrapMeleeDamage>
			<TrapSpringChance>0.1</TrapSpringChance>
		</statBases>
		<costList>
			<WoodLog>100</WoodLog>
		</costList>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
