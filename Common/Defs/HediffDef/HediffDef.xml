<Defs>
	<HediffDef>
		<defName>TrappedInNoose</defName>
		<label>trapped in noose</label>
		<labelNoun>noose</labelNoun>
		<description>Noose around a leg. Immobilises a target for a short duration.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>2</lethalSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>In Noose</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SelfHeal">
				<healAmount>0.03</healAmount>
			</li>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>CrushedLegs</defName>
		<label>crushed legs</label>
		<labelNoun>crushed legs</labelNoun>
		<description>Legs were crashed in a bear trap. Requires a long time to recover.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>2</lethalSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>recovering</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>severly</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.6</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SelfHeal">
				<healAmount>0.001</healAmount>
			</li>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>LethalPoison</defName>
		<label>leathal poison</label>
		<labelNoun>poisoning</labelNoun>
		<description>A creature has been lethally poisoned. It's life has became short, and extremely painful.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<tendable>true</tendable>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>48</baseTendDurationHours>
				<severityPerDayTended>-100000.0</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>6</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.5</painOffset>
				<minSeverity>0.45</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.3</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<painOffset>0.75</painOffset>
				<minSeverity>0.65</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>SleepingGas</defName>
		<label>sleeping gas</label>
		<labelNoun>sleeping gas</labelNoun>
		<description>This creature is affected by a sleeping gas. Requires a long time to recover.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<tendable>true</tendable>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>2</lethalSeverity>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>major</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.75</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>max</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>48</baseTendDurationHours>
				<severityPerDayTended>-1.0</severityPerDayTended>
			</li>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>InsectGas</defName>
		<label>insect gas</label>
		<labelNoun>insect gas</labelNoun>
		<description>This gas has been designed specifically to target insects. It permanently damages their respiratory system.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>2</lethalSeverity>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>major</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.75</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>max</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<setMax>-1.0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>