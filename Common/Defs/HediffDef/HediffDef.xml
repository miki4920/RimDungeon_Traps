<Defs>
	
	<HediffDef>
    <defName>TrappedInNoose</defName>
    <label>trapped in noose</label>
    <labelNoun>noose</labelNoun>
    <description>Noose around a leg. Immobilises a target for a short duration.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1</maxSeverity>
	<lethalSeverity>2</lethalSeverity>
    <stages>
      <li>
	  <minSeverity>0</minSeverity>
	  <label>In Noose</label>
	  <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.03</healAmount>
      </li>
    </comps>
  </HediffDef>
  
  <RimDungeon.Hediff_Trap_Def>
	<defName>TrappedInNoose</defName>
	<hediffToAdd>TrappedInNoose</hediffToAdd>
	<hediffSeverity>1.0</hediffSeverity>
	<hediffChance>1.0</hediffChance>
  </RimDungeon.Hediff_Trap_Def>
  
  <HediffDef>
    <defName>CrushedLegs</defName>
    <label>crushed legs</label>
    <labelNoun>crushed legs</labelNoun>
    <description>Legs were crashed in a bear trap. Requires a long time to recover.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1</maxSeverity>
	<lethalSeverity>2</lethalSeverity>
    <stages>
	<li>
	  <minSeverity>0</minSeverity>
	  <label>recovering</label>
	  <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
	  <minSeverity>0.5</minSeverity>
	  <label>severly</label>
	  <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.001</healAmount>
      </li>
    </comps>
  </HediffDef>
  
  <RimDungeon.Hediff_Trap_Def>
	<defName>CrushedLegs</defName>
	<hediffToAdd>CrushedLegs</hediffToAdd>
	<hediffSeverity>1.0</hediffSeverity>
	<hediffChance>1.0</hediffChance>
  </RimDungeon.Hediff_Trap_Def>
  
  <HediffDef>
    <defName>LethalPoison</defName>
    <label>leathal poison</label>
    <labelNoun>poisoning</labelNoun>
    <description>A creature has been lethally poisoned. It's life has became short, and extremely painful.</description>
    <hediffClass>HediffWithComps</hediffClass>
	<lethalSeverity>1</lethalSeverity>
    <stages>
      <li>
		<painOffset>0.5</painOffset>
        <minSeverity>0.45</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
		<painOffset>0.75</painOffset>
        <minSeverity>0.65</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>-0.01</healAmount>
      </li>
    </comps>
  </HediffDef>
  
  <RimDungeon.Hediff_Trap_Def>
	<defName>LethalPoison</defName>
	<hediffToAdd>LethalPoison</hediffToAdd>
	<hediffSeverity>0.5</hediffSeverity>
	<hediffChance>1.0</hediffChance>
  </RimDungeon.Hediff_Trap_Def>
</Defs>