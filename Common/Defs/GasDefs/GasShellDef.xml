<Defs>
	<ThingDef Name="GasTankBase" ParentName="ResourceBase" Abstract="True">
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<tickerType>Normal</tickerType>
		<stackLimit>25</stackLimit>
		<techLevel>Industrial</techLevel>
		<statBases>
		  <MaxHitPoints>25</MaxHitPoints>
		  <MarketValue>25</MarketValue>
		  <Mass>1.25</Mass>
		  <Flammability>0</Flammability>
		  <DeteriorationRate>1.5</DeteriorationRate>
		</statBases>
		<thingCategories>
		  <li>GasTanks</li>
		</thingCategories>
		<tradeTags>
		  <li>MortarShell</li>
		</tradeTags>
	</ThingDef>

	<ThingDef Name="MakeableGasTankBase"
        		ParentName="GasTankBase"
        		Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<effectWorking>Cook</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<workAmount>100</workAmount>
			<targetCountAdjustment>5</targetCountAdjustment>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="MakeableGasTankBase">
		<defName>SmokeGasTank</defName>
		<label>Smoke gas tank</label>
		<description>A shell that generates a cloud of smoke when detonated, obscuring incoming shots and preventing turrets from locking on. Can be fired from mortars or installed as a trap. Explodes when damaged.</description>
		<graphicData>
			<texPath>Things/GasTanks/GasTankSmoke</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Gas_Trap_Def">
				<gas>Smoke</gas>
				<damageDef>Smoke</damageDef>
				<radius>2.9</radius>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>
		<recipeMaker>
			<researchPrerequisite>Mortars</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
