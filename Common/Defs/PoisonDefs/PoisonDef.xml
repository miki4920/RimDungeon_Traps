<Defs>
	<ThingDef Name="PoisonBase" ParentName="ResourceBase" Abstract="True">
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<tickerType>Normal</tickerType>
		<stackLimit>10</stackLimit>
		<techLevel>Medieval</techLevel>
		<statBases>
		  <MaxHitPoints>25</MaxHitPoints>
		  <MarketValue>25</MarketValue>
		  <Mass>1.25</Mass>
		  <Flammability>0</Flammability>
		  <DeteriorationRate>1.5</DeteriorationRate>
		</statBases>
		<thingCategories>
		  <li>Poisons</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Name="MakeablePoisonBase"
        		ParentName="PoisonBase"
        		Abstract="True">
		<recipeMaker>
			<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
			<workSkill>Intellectual</workSkill>
			<effectWorking>Cook</effectWorking>
			<soundWorking>Recipe_Brewing</soundWorking>
			<workAmount>100</workAmount>
			<targetCountAdjustment>5</targetCountAdjustment>
			<recipeUsers>
				<li>DrugLab</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>3</Crafting>
				<Intellectual>3</Intellectual>
			</skillRequirements>
			<researchPrerequisite>Mortars</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="MakeablePoisonBase">
		<defName>SleepPoison</defName>
		<label>Sleep poison</label>
		<description>A concentrated extract of Valerian. This poison puts target to sleep immidately. Takes a long time to wear off. Medical Treatment can speed up that process.</description>
		<graphicData>
			<texPath>Things/PoisonBottles/PoisonBottleSleep</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Hediff_Trap_Def">
				<hediff>Sleep</hediff>
				<severity>1.0</severity>
				<chance>1.0</chance>
				<affectsLiving>true</affectsLiving>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>

	</ThingDef>
	
	<ThingDef ParentName="MakeablePoisonBase">
		<defName>Insecticide</defName>
		<label>Insecticide</label>
		<description>A concentrated form of Nicotine. Poison contains just enough of it to significantly damage insects without hurting humans.</description>
		<graphicData>
			<texPath>Things/PoisonBottles/PoisonBottleInsect</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Hediff_Trap_Def">
				<hediff>Insecticide</hediff>
				<severity>1.0</severity>
				<chance>1.0</chance>
				<affectsInsect>true</affectsInsect>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>
	</ThingDef>
	
	<ThingDef ParentName="MakeablePoisonBase">
		<defName>RagePoison</defName>
		<label>Rage poison</label>
		<description>A potent chemical extracted from local psychedelic drugs. Whilst under its effect, the creatures experiences strong hallucinations and considers all creatures as enemies.</description>
		<graphicData>
			<texPath>Things/PoisonBottles/PoisonBottleRage</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Hediff_Trap_Def">
				<hediff>Rage</hediff>
				<severity>1.0</severity>
				<chance>1.0</chance>
				<affectsLiving>true</affectsLiving>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>
	</ThingDef>
	
	<ThingDef ParentName="MakeablePoisonBase">
		<defName>EnfeeblePoison</defName>
		<label>Enfeeble poison</label>
		<description>A muscle targetting poison. Whilst under its effect, the creature is significantly slower and less effective at combat.</description>
		<graphicData>
			<texPath>Things/PoisonBottles/PoisonBottleEnfeeble</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Hediff_Trap_Def">
				<hediff>Enfeeble</hediff>
				<severity>1.0</severity>
				<chance>1.0</chance>
				<affectsLiving>true</affectsLiving>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>
	</ThingDef>
	
	<ThingDef ParentName="MakeablePoisonBase">
		<defName>Neurotoxin</defName>
		<label>Neurotoxin</label>
		<description>This poison damages brain upon injection. It slowly damages it till the person dies. Due to its instability, it cannot be used in a gas form.</description>
		<graphicData>
			<texPath>Things/PoisonBottles/PoisonBottleNeurotoxin</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="RimDungeon.Hediff_Trap_Def">
				<hediff>Neurotoxin</hediff>
				<severity>1.0</severity>
				<chance>1.0</chance>
				<affectsLiving>true</affectsLiving>
			</li>
		</modExtensions>
		<costList>
			<Steel>25</Steel>
		</costList>
	</ThingDef>
</Defs>