<Defs>
	<ThingDef ParentName="BaseDungeonTrap">
		<defName>SmokeTrap</defName>
		<label>smoke trap</label>
		<description>A Trap filled with chemicals to create smoke upon activation. Can be activated remotely to help both attacking and defending forces.</description>
		<graphicData>
			<texPath>Things/Building/Traps/Smoke_Trap</texPath>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<WorkToBuild>50</WorkToBuild>
			<Flammability>1.0</Flammability>
			<TrapSpringChance>0</TrapSpringChance>
		</statBases>
		<costList>
			<Steel>10</Steel>
			<Chemfuel>20</Chemfuel>
		</costList>
		<modExtensions>
			<li Class="RimDungeon.Trap_Def">
				<sameFactionSpringChance>0</sameFactionSpringChance>
				<wildAnimalSpringChance>0</wildAnimalSpringChance>
				<manualSpring>true</manualSpring>
			</li>
			<li Class="RimDungeon.Gas_Trap_Def">
				<gas>Smoke</gas>
				<damageDef>Smoke</damageDef>
				<radius>3.0</radius>
			</li>
		</modExtensions>
		<specialDisplayRadius>3.0</specialDisplayRadius>
		<building>
			<trapDestroyOnSpring>true</trapDestroyOnSpring>
		</building>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<researchPrerequisites>
			<li>GasTraps</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>